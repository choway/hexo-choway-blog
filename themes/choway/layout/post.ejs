<!--  文章模板  -->
<article>
    <div class="kratos-hentry kratos-post-inner clearfix">
        <header class="kratos-entry-header">
            <h1 class="kratos-entry-title text-center"><%- page.title %></h1>
            <div class="kratos-post-meta text-center">
                <span>
                    <i class="fa fa-commenting-o"></i> choway
                    <i class="fa fa-calendar"></i> <%- full_date(page.date, 'YYYY-MM-DD hh:mm:ss') %>
                    <i class="fa fa-eye"></i> 
                    <% if (page.categories && page.categories.length){ %>
                        <%- list_categories(page.categories, {
                            show_count: false,
                            style: 'none',
                            separator: ''
                        }) %>
                    <% } else { %>未分类<% } %>
                </span>
            </div>
        </header>
        <div class="kratos-post-content">
            <%- page.content %>
        </div>
        <footer class="kratos-entry-footer clearfix">
            <div class="post-like-donate text-center clearfix" id="post-like-donate">

            </div>
            <div class="footer-tag clearfix">
                <div class="pull-left">
                    <i class="fa fa-tags"></i>
                    <% if (page.tags && page.tags.length) { %>
                        <%- list_tags(page.tags, {
                            show_count: false,
                            style: 'none',
                            separator: ''
                        }) %>
                    <% } else { %>
                        <a>No Tag</a>
                    <% } %>
                </div>
            </div>
        </footer>
    </div>
    <div class="kratos-hentry kratos-copyright text-center clearfix">
        <img alt="知识共享许可协议" src="<%- url_for('images/licenses.png') %>">
        <h5>本作品采用 <a rel="license nofollow" target="_blank" href="http://creativecommons.org/licenses/by-sa/4.0/">知识共享署名-相同方式共享 4.0 国际许可协议</a> 进行许可</h5>
    </div>

    <% if (page.prev || page.next) { %>
    <nav class="navigation post-navigation clearfix" role="navigation">
        <% if (page.prev) { %>
        <div class="nav-previous clearfix">
            <a title="<%- page.prev.title %>" href="<%- url_for(page.prev.path) %>">&lt; 上一篇</a>
        </div>
        <% } %>
        <% if (page.next) { %>
        <div class="nav-next">
            <a title="<%- page.next.title %>" href="<%- url_for(page.next.path) %>">下一篇 &gt;</a>
        </div>
        <% } %>
    </div>
    <% } %>
</article>